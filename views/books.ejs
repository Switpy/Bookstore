<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Livres - Librairie</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/navbar') %>
  <div class="container mt-5">
    <h2>Nos Livres</h2>
    <form class="mb-3" id="searchForm">
      <input type="text" class="form-control" id="search" placeholder="Rechercher par titre ou auteur...">
    </form>
    <div class="row">
      <% books.forEach(book => { %>
        <div class="col-md-4 mb-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= book.title %></h5>
              <p class="card-text">Auteur : <%= book.author %></p>
              <p class="card-text">Prix : <%= book.price %> €</p>
              <a href="/book/<%= book._id %>" class="btn btn-primary">Détails</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <%- include('partials/footer') %>
  <script src="/js/client.js"></script>
</body>
</html>