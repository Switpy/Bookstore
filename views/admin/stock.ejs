<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Gestion Stock - Librairie</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('../partials/navbar') %>
  <div class="container mt-5">
    <h2>Gestion des Stocks</h2>
    <table class="table">
      <thead>
        <tr>
          <th>Titre</th>
          <th>Stock</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach(book => { %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.stock %></td>
            <td>
              <form class="d-inline" onsubmit="updateStock(event, '<%= book._id %>')">
                <input type="number" class="form-control d-inline w-25" name="stock" value="<%= book.stock %>" min="0" required>
                <button type="submit" class="btn btn-sm btn-primary">Mettre Ã  jour</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
   <div class="container mt-5">
  <%- include('../partials/footer') %>
</div>
  <script src="/js/client.js"></script>
</body>
</html>